{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "lib": [
      "dom", "es2015"
    ]
  }
}
